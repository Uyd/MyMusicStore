@using MusicStoreEntity
@model IEnumerable<MusicStoreEntity.Album>
@*强类型视图*@
@{
    ViewBag.Title = "首页";
}

<div class="bg"></div>
<h3><em>新歌</em>上架</h3>
<div>
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("detail","store",new{id=item.ID})">
                    <img src="@item.AlbumArtUrl" alt="@item.Title">
                    <span>@item.Title - @item.Artist.Name</span>
                </a>
            </li>
        }
    </ul>
</div>
